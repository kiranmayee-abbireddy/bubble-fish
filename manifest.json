{
  "name": "Bubble Fish",
  "short_name": "Bubble Fish",
  "description": "A fun underwater arcade game where you catch fish with bubbles. Test your reflexes, collect power-ups, and aim for high scores!",
  "id": "bubble-fish-v1",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "orientation": "landscape-primary",
  "background_color": "#003366",
  "theme_color": "#003366",
  "categories": ["games", "entertainment", "arcade"],
  "dir": "ltr",
  "lang": "en",
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.kiryee.bubblefish",
      "id": "com.kiryee.bubblefish"
    }
  ],
  "icons": [
    {
      "src": "icons/bubble-fish-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/bubble-fish-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/bubble-fish-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/bubble-fish-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/gameplay-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Gameplay showing fish catching"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"],
    "route_to": "existing-client"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "application/json": [".bubblefish"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+bubblefish",
      "url": "/?fish=%s"
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Quick Play",
      "short_name": "Play",
      "description": "Start a new game",
      "url": "./?mode=quick",
      "icons": [{ "src": "icons/play.png", "sizes": "96x96" }]
    }
  ],
  "widgets": [
    {
      "name": "High Score",
      "description": "Shows your current high score",
      "tag": "highscore",
      "template": "widgets/highscore.html",
      "ms_ac_template": "widgets/highscore.json",
      "data": {
        "interval": 3600,
        "source": "/api/scores"
      }
    }
  ],
  "background_sync": {
    "sync_entries": [
      {
        "name": "scores-sync",
        "frequency": "periodic",
        "min_interval": 86400
      }
    ]
  },
  "periodic_sync": {
    "score_update": {
      "interval": 86400
    }
  },
  "notifications": {
    "actions": [
      {
        "action": "view",
        "title": "View Score"
      }
    ]
  },
  "permissions": [
    "background-sync",
    "notifications",
    "periodic-background-sync"
  ],
  "handle_links": {
    "urls": [
      { "pattern": "https://*.bubblefish.app/*" }
    ]
  },
  "scope_extensions": [
    { "origin": "https://bubblefish.app" }
  ]
} 