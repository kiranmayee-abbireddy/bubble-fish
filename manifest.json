{
  "name": "Bubble Fish",
  "short_name": "Bubble Fish",
  "description": "A fun underwater arcade game where you catch fish with bubbles. Test your reflexes, collect power-ups, and aim for high scores!",
  "id": "bubble-fish-v1",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "orientation": "landscape-primary",
  "background_color": "#003366",
  "theme_color": "#003366",
  "categories": ["games", "entertainment", "arcade"],
  "dir": "ltr",
  "lang": "en",
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/gameplay-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Gameplay showing fish catching"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Play",
      "short_name": "Play",
      "description": "Start a new game",
      "url": "./?mode=quick",
      "icons": [{ "src": "icons/play.png", "sizes": "96x96" }]
    }
  ],
  "handle_links": {
    "urls": [
      { "pattern": "https://*.bubblefish.game/*" },
      { "pattern": "https://bubblefish.game/*" }
    ]
  },
  "scope_extensions": [
    { "origin": "https://bubblefish.game" },
    { "origin": "https://*.bubblefish.game" }
  ],
  "widgets": [
    {
      "name": "High Score Widget",
      "short_name": "Scores",
      "description": "Shows your current high score",
      "tag": "highscore",
      "ms_ac_template": "widgets/highscore.json"
    }
  ],
  "background_sync": {
    "sync_entries": [
      {
        "name": "scores-sync",
        "frequency": "periodic",
        "min_interval": 86400
      }
    ]
  },
  "permissions": ["background-sync", "notifications", "periodic-background-sync"]
} 